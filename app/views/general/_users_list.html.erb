<table class='users'>
<%= will_paginate @users%>	
<% @users.each do |user| %>
<tr class="user_info">
			<td class='user_avatars'>
				<%= image_tag user.picture.url if user.picture? %>
        <%= gravatar_for user if not user.picture? %>
			</td>
			<td>
        <%= user.username if user.username %></h2>
				<%= user.email if not user.username %>
			</td>
			<td>School List (<%=user.my_schools.count%>)</td>
			<td id="follow_icon">
				<% @user=user%>
				<%= render 'users/follow_form'%>
			</td>
</tr>
<% end %>
<%= will_paginate @users%>	
</table>