<p>
  <strong>Name:</strong>
  <%= @school.Institution_Name %>
</p>

<h2>Comments</h2>
<% @school.reviews.each do |review| %>
  <p>
    <strong>User:</strong>
    <%= User.find_by(id:review.user_id).username %>
  </p>
 
  <p>
    <strong>Review:</strong>
    <%= review.body %>
  </p>
<% end %>


<%= form_for([@school, @school.reviews.build]) do |f| %>
  <p>
    <%= f.label :"Add" %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>