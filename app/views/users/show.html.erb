<% provide(:title, @user.username) %>
<div class="row">
  <aside class="col-md-4">
    <section>
        <%= gravatar_for @user %>
			<h5>
        <%= @user.username if @user.username %>
				<%= @user.email if not @user.username %>
      </h5>
    </section>
    <section class="stats">
      <%= render 'devise/shared/stats' %>
    </section>
		<%=render 'users/follow_form'%>
  </aside>
  <div class="col-md-8">
      <h3>School List ( <%= @user.my_schools.count %> )</h3>
      <ol class="mylist ol_format">
        <%= render @user.my_schools %>
      </ol>
  </div>



</div>